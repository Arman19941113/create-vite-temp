{
  "name": "template-vue",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write src/",
    "lint": "eslint --ext js,ts,jsx,tsx,vue src && stylelint 'src/**/*.{css,vue}'",
    "lint:js": "eslint --fix --ext js,ts,jsx,tsx,vue src",
    "lint:css": "stylelint --fix 'src/**/*.{css,vue}'"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": "eslint",
    "*.{css,vue}": "stylelint",
    "*.{js,ts,jsx,tsx,vue,css}": "prettier --write"
  },
  "dependencies": {
    "@armantang/fast-axios": "^1.0.6",
    "axios": "^1.3.6",
    "pinia": "^2.0.35",
    "vue": "^3.2.47",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.6"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/node": "^18.16.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vitejs/plugin-vue": "^4.2.0",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.3.2",
    "eslint": "^8.39.0",
    "eslint-plugin-vue": "^9.11.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.23",
    "postcss-html": "^1.5.0",
    "postcss-mixins": "^9.0.4",
    "postcss-nested": "^6.0.1",
    "postcss-preset-env": "^8.3.2",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.2.7",
    "stylelint": "^15.6.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^31.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^4.9.5",
    "vite": "^4.3.1",
    "vue-eslint-parser": "^9.1.1",
    "vue-tsc": "^1.4.4"
  },
  "engines": {
    "node": ">=16"
  }
}
