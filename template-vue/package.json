{
  "name": "template-vue",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "type-check": "vue-tsc --noEmit",
    "build-only": "vite build",
    "preview": "vite preview",
    "format": "prettier --write src/",
    "lint": "eslint --ext js,ts,jsx,tsx,vue src && stylelint 'src/**/*.{css,vue}'",
    "lint:js": "eslint --fix --ext js,ts,jsx,tsx,vue src",
    "lint:css": "stylelint --fix 'src/**/*.{css,vue}'"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,vue}": "eslint",
    "*.{css,vue}": "stylelint",
    "*.{js,ts,jsx,tsx,vue,css}": "prettier --write"
  },
  "dependencies": {
    "@armantang/fast-axios": "^1.0.6",
    "axios": "^1.4.0",
    "pinia": "^2.1.4",
    "vue": "^3.3.4",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.2.2"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.3.2",
    "@types/node": "^20.3.2",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.43.0",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.24",
    "postcss-preset-env": "^8.5.1",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "stylelint": "^15.9.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^33.0.0",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.1.6",
    "vite": "^4.3.9",
    "vue-eslint-parser": "^9.3.1",
    "vue-tsc": "^1.8.3"
  },
  "engines": {
    "node": ">=16"
  }
}
